extends base

block variables
  - const title = "Login"

block body 
  h1 Log in to your account
  span Or 
  a(href='/register') register
  br
  br

  if error
    p ERROR: #{error}

  form(method="post")
    span Email
    input(type="text", name="email", required=true)
    br
    
    span Password 
    input(type="password", name="password", required=true)
    br

    input(type="submit")